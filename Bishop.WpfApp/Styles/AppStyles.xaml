<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:Bishop.WpfApp.Styles">

    <Style TargetType="{x:Type materialDesign:Card}">
        <Setter Property="Background" Value="#222"></Setter>
    </Style>

    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource MaterialDesignTextBox}">
        <Setter Property="Margin" Value="0,0,10,2"></Setter>
        <Setter Property="Foreground" Value="#F0F0F0"></Setter>
        <Setter Property="Background" Value="Transparent"></Setter>
    </Style>
    
    <Style TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="#F0F0F0"></Setter>
        <Setter Property="Margin" Value="0"></Setter>
        <Setter Property="Padding" Value="0"></Setter>
    </Style>
    <Style x:Key="TextBlockWhiteForeground" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#F0F0F0"></Setter>
    </Style>

    <Style x:Key="Title" TargetType="{x:Type TextBlock}" BasedOn="{StaticResource TextBlockWhiteForeground}">
        <Setter Property="FontSize" Value="18"></Setter>
    </Style>

</ResourceDictionary>